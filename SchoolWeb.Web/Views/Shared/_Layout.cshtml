@{
    Layout = null;
    var pageTitle = ViewData["Title"] as string ?? "Școala Gimnazială Crețeni - Vâlcea";
    // You can override the body class per page via: ViewData["BodyClass"] = "inner-page";
    var bodyClass = (ViewData["BodyClass"] as string) ?? "index-page";
}
<!DOCTYPE html>
<html lang="ro">
<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>@pageTitle</title>
  <meta name="description" content="Școala Gimnazială Crețeni — comunitate, educație și performanță." />
  <meta name="keywords" content="școala Crețeni, educație, Vâlcea, gimnaziu" />

  <!-- Favicons (use template images for now) -->
  <link href="~/assets/img/favicon.png" rel="icon" asp-append-version="true" />
  <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon" asp-append-version="true" />

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect" />
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800;900&family=Raleway:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

  <!-- Vendor CSS Files -->
  <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
  <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" asp-append-version="true" />
  <link href="~/assets/vendor/aos/aos.css" rel="stylesheet" asp-append-version="true" />
  <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" asp-append-version="true" />
  <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" asp-append-version="true" />

  <!-- Main CSS File (your template uses main.css) -->
  <link href="~/assets/css/main.css" rel="stylesheet" asp-append-version="true" />

  @RenderSection("Styles", required: false)
</head>

<body class="@bodyClass">
  <!-- ======= Header ======= -->
  <header id="header" class="header d-flex align-items-center sticky-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center">

      <!-- Logo / Sitename -->
      <a class="logo d-flex align-items-center me-auto" asp-controller="Home" asp-action="Index">
        @* If you later want an image logo, drop it in assets/img/logo.png and uncomment below *@
        @* <img src="~/assets/img/logo.png" alt="Școala Gimnazială Crețeni" asp-append-version="true" /> *@
        <h1 class="sitename">Școala Gimnazială Crețeni</h1>
      </a>

      <!-- Navmenu (Mentor structure) -->
      <nav id="navmenu" class="navmenu">
        <ul>
          <li><a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : null)">Home</a></li>

          <li class="dropdown">
            <a href="#"><span>Despre noi</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
            <ul>
              <li><a asp-controller="Pages" asp-action="Istoric">Istoric</a></li>
              <li><a asp-controller="Pages" asp-action="Misiunea">Misiunea școlii</a></li>
              <li><a asp-controller="Pages" asp-action="Organigrama">Organigrama</a></li>
            </ul>
          </li>

          <li class="dropdown">
            <a href="#"><span>Profesori</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
            <ul>
              <li><a asp-controller="Profesori" asp-action="CorpulProfesoral">Corpul profesoral</a></li>
            </ul>
          </li>

          <li><a asp-controller="Noutati" asp-action="Index">Noutăți</a></li>
          <li><a asp-controller="Pages" asp-action="Linkuri">Link-uri</a></li>
        </ul>
        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>

      <!-- Right CTA: adapt as needed (e.g., Admissions) -->
      <a class="btn-getstarted" asp-controller="Pages" asp-action="Contact">Contact</a>
    </div>
  </header>
  <!-- End Header -->

  <!-- ======= Main ======= -->
  <main class="main">
    @RenderBody()
  </main>
  <!-- End Main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer position-relative light-background">
    <div class="container footer-top">
      <div class="row gy-4">
        <div class="col-lg-4 col-md-6 footer-about">
          <a class="logo d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <span class="sitename">Școala Gimnazială Crețeni</span>
          </a>
          <div class="footer-contact pt-3">
            <p>Comuna Crețeni, județul Vâlcea</p>
            <p class="mt-3"><strong>Telefon:</strong> <span>0250 772 902</span></p>
            <p><strong>Email:</strong> <span><a href="mailto:scoala.creteni@yahoo.com">scoala.creteni@yahoo.com</a></span></p>
          </div>
          <div class="social-links d-flex mt-4">
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-instagram"></i></a>
          </div>
        </div>

        <div class="col-lg-2 col-md-3 footer-links">
          <h4>Pagini utile</h4>
          <ul>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Pages" asp-action="Istoric">Istoric</a></li>
            <li><a asp-controller="Pages" asp-action="Misiunea">Misiunea</a></li>
            <li><a asp-controller="Pages" asp-action="Policies">Politici</a></li>
            <li><a asp-controller="Pages" asp-action="PoliticaCookie">Politica de cookie-uri</a></li>
          </ul>
        </div>

        <div class="col-lg-2 col-md-3 footer-links">
          <h4>Resurse</h4>
          <ul>
            <li><a asp-controller="Pages" asp-action="Linkuri">Link-uri instituții</a></li>
            <li><a asp-controller="Noutati" asp-action="Index">Noutăți</a></li>
            <li><a asp-controller="Pages" asp-action="Contact">Contact</a></li>
          </ul>
        </div>

        <div class="col-lg-4 col-md-12 footer-newsletter">
          <h4>Buletin informativ</h4>
          <p>Abonează-te pentru noutăți despre activitățile școlii.</p>
          <form class="php-email-form" method="post" action="#">
            <div class="newsletter-form">
              <input type="email" name="email" placeholder="email@example.com" />
              <input type="submit" value="Abonare" />
            </div>
            <div class="loading">Se încarcă...</div>
            <div class="error-message"></div>
            <div class="sent-message">Cererea ta a fost trimisă. Mulțumim!</div>
          </form>
        </div>
      </div>
    </div>

    <div class="container copyright text-center mt-4">
      <p>© <span>@DateTime.Now.Year</span> <strong class="px-1 sitename">Școala Gimnazială Crețeni</strong> <span>— Toate drepturile rezervate</span></p>
      <div class="credits">
        Design bazat pe tema <a href="https://bootstrapmade.com/mentor-free-education-bootstrap-theme/">Mentor</a>
      </div>
    </div>
  </footer>
  <!-- End Footer -->

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center" aria-label="Sus">
    <i class="bi bi-arrow-up-short"></i>
  </a>

  <!-- Preloader (optional) -->
  <div id="preloader"></div>

  <!-- Cookies banner -->
  @await Html.PartialAsync("_CookieConsent")

  <!-- ======= Vendor JS Files ======= -->
  <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/php-email-form/validate.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/aos/aos.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/glightbox/js/glightbox.min.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/purecounter/purecounter_vanilla.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/swiper/swiper-bundle.min.js" asp-append-version="true"></script>

  <!-- Main JS (use the null-safe version we added) -->
  <script src="~/assets/js/main.js" asp-append-version="true"></script>

  <!-- Cookie logic -->
  <script src="~/js/cookies.js" asp-append-version="true"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>
