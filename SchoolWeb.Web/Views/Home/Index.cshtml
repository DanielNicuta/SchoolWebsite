@{
  ViewData["Title"] = "Școala Gimnazială Crețeni - Vâlcea";
  ViewData["BodyClass"] = "index-page";
}
<!-- Hero -->
<section id="hero" class="hero section dark-background">
  <img src="~/assets/img/hero-bg.jpg" alt="" data-aos="fade-in" asp-append-version="true">
  <div class="container">
    <h2 data-aos="fade-up" data-aos-delay="100">Învățăm azi,<br>Conducem mâine</h2>
    <p data-aos="fade-up" data-aos-delay="200">Comunitate, educație și performanță la Școala Gimnazială Crețeni.</p>
    <div class="d-flex mt-4" data-aos="fade-up" data-aos-delay="300">
      <a asp-controller="Noutati" asp-action="Index" class="btn-get-started">Vezi noutăți</a>
    </div>
  </div>
</section>

<!-- About -->
<section id="about" class="about section">
  <div class="container">
    <div class="row gy-4">
      <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-up" data-aos-delay="100">
        <img src="~/assets/img/about.jpg" class="img-fluid" alt="" asp-append-version="true">
      </div>
      <div class="col-lg-6 order-2 order-lg-1 content" data-aos="fade-up" data-aos-delay="200">
        <h3>Despre școala noastră</h3>
        <p class="fst-italic">
          O școală modernă, orientată spre performanță, cu cadre didactice dedicate și elevi pregătiți pentru viitor.
        </p>
        <ul>
          <li><i class="bi bi-check-circle"></i> <span>Rezultate bune și proiecte educaționale.</span></li>
          <li><i class="bi bi-check-circle"></i> <span>Comunitate implicată și susținere din partea părinților.</span></li>
          <li><i class="bi bi-check-circle"></i> <span>Resurse și dotări în continuă modernizare.</span></li>
        </ul>
        <a asp-controller="Pages" asp-action="Istoric" class="read-more"><span>Află mai mult</span><i class="bi bi-arrow-right"></i></a>
      </div>
    </div>
  </div>
</section>

<!-- Counts -->
<section id="counts" class="section counts light-background">
  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">
      <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
          <span data-purecounter-start="0" data-purecounter-end="150" data-purecounter-duration="1" class="purecounter"></span>
          <p>Elevi</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
          <span data-purecounter-start="0" data-purecounter-end="25" data-purecounter-duration="1" class="purecounter"></span>
          <p>Profesori</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
          <span data-purecounter-start="0" data-purecounter-end="12" data-purecounter-duration="1" class="purecounter"></span>
          <p>Proiecte</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
          <span data-purecounter-start="0" data-purecounter-end="4" data-purecounter-duration="1" class="purecounter"></span>
          <p>Parteneriate</p>
        </div>
      </div>
    </div>
  </div>
</section>

