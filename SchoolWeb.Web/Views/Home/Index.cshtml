@{
  ViewData["Title"] = "Școala Gimnazială Crețeni - Vâlcea";
  ViewData["BodyClass"] = "index-page";
}
<!-- Hero -->
<section id="hero" class="hero section dark-background">
  @{
    var heroImg = string.IsNullOrWhiteSpace(Model?.HeroImageUrl)
        ? Url.Content("~/assets/img/hero-bg.jpg")
        : Model!.HeroImageUrl!;
  }
  <img src="@heroImg" alt="" data-aos="fade-in" asp-append-version="true">

  <div class="container">
    <h2 data-aos="fade-up" data-aos-delay="100">
      @(Model?.HeroTitle ?? "Învățăm azi,<br>Conducem mâine")
    </h2>

    <p data-aos="fade-up" data-aos-delay="200">
      @(Model?.HeroSubtitle ?? "Comunitate, educație și performanță la Școala Gimnazială Crețeni.")
    </p>

    <div class="d-flex mt-4" data-aos="fade-up" data-aos-delay="300">
      @{
        var btnText = string.IsNullOrWhiteSpace(Model?.HeroButtonText) ? "Vezi noutăți" : Model!.HeroButtonText!;
        var btnUrl = string.IsNullOrWhiteSpace(Model?.HeroButtonUrl) ? Url.Action("Index", "Noutati") : Model!.HeroButtonUrl!;
      }
      <a href="@btnUrl" class="btn-get-started">@btnText</a>
    </div>
  </div>
</section>


<!-- About -->
<section id="about" class="about section">
  <div class="container">
    <div class="row gy-4">
      <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-up" data-aos-delay="100">
        @{
          var aboutImg = string.IsNullOrWhiteSpace(Model?.AboutImageUrl)
              ? Url.Content("~/assets/img/about.jpg")
              : Model!.AboutImageUrl!;
        }
        <img src="@aboutImg" class="img-fluid" alt="" asp-append-version="true">
      </div>

      <div class="col-lg-6 order-2 order-lg-1 content" data-aos="fade-up" data-aos-delay="200">
        <h3>@(Model?.AboutTitle ?? "Despre școala noastră")</h3>

        @if (!string.IsNullOrWhiteSpace(Model?.AboutSubtitle))
        {
          <p class="fst-italic">@Model!.AboutSubtitle</p>
        }

        @if (!string.IsNullOrWhiteSpace(Model?.AboutHtml))
        {
          @Html.Raw(Model!.AboutHtml)
        }
        else
        {
          <p class="fst-italic">
            O comunitate educațională orientată spre elev, dezvoltare și rezultate.
          </p>
        }
      </div>
    </div>
  </div>
</section>


<!-- Counts -->
<section id="counts" class="section counts light-background">
  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">
      <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
          <span data-purecounter-start="0" data-purecounter-end="150" data-purecounter-duration="1" class="purecounter"></span>
          <p>Elevi</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
          <span data-purecounter-start="0" data-purecounter-end="25" data-purecounter-duration="1" class="purecounter"></span>
          <p>Profesori</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
          <span data-purecounter-start="0" data-purecounter-end="12" data-purecounter-duration="1" class="purecounter"></span>
          <p>Proiecte</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
          <span data-purecounter-start="0" data-purecounter-end="4" data-purecounter-duration="1" class="purecounter"></span>
          <p>Parteneriate</p>
        </div>
      </div>
    </div>
  </div>
</section>

